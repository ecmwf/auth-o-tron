{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "description": "A top-level enum for versioned configurations.",
  "oneOf": [
    {
      "description": "Main config for v1.0.0, containing store, providers, augmenters, etc.",
      "type": "object",
      "required": [
        "bind_address",
        "jwt",
        "logging",
        "providers",
        "services",
        "store",
        "version"
      ],
      "properties": {
        "augmenters": {
          "default": [],
          "type": "array",
          "items": {
            "$ref": "#/definitions/AugmenterConfig"
          }
        },
        "auth": {
          "anyOf": [
            {
              "$ref": "#/definitions/AuthConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "bind_address": {
          "type": "string"
        },
        "include_legacy_headers": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "jwt": {
          "$ref": "#/definitions/JWTConfig"
        },
        "logging": {
          "$ref": "#/definitions/LoggingConfig"
        },
        "providers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProviderConfig"
          }
        },
        "services": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ServiceConfig"
          }
        },
        "store": {
          "$ref": "#/definitions/StoreConfig"
        },
        "version": {
          "type": "string",
          "enum": [
            "1.0.0"
          ]
        }
      }
    }
  ],
  "definitions": {
    "AugmenterConfig": {
      "description": "Configuration options for augmenters (e.g. an LDAP roles augmenter).",
      "oneOf": [
        {
          "description": "Configuration required to connect to LDAP and fetch user roles.",
          "type": "object",
          "required": [
            "ldap_password",
            "ldap_user",
            "name",
            "realm",
            "search_base",
            "type",
            "uri"
          ],
          "properties": {
            "filter": {
              "type": [
                "string",
                "null"
              ]
            },
            "filters": {
              "description": "Separate filters of LDAP RDN format (e.g. 'OU=Resources,OU=Common')",
              "type": [
                "array",
                "null"
              ],
              "items": {
                "type": "string"
              }
            },
            "bind_dn": {
              "description": "Optional explicit bind DN; defaults to CN=<ldap_user>,OU=Connectors,OU=Service Accounts,DC=ecmwf,DC=int",
              "type": [
                "string",
                "null"
              ]
            },
            "ldap_password": {
              "type": "string"
            },
            "ldap_user": {
              "description": "Service account name used to derive the default bind DN when bind_dn is not set",
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "realm": {
              "type": "string"
            },
            "search_base": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "ldap"
              ]
            },
            "uri": {
              "type": "string"
            }
          }
        },
        {
          "description": "Attach static roles to specific users.",
          "type": "object",
          "required": [
            "name",
            "realm",
            "roles",
            "type"
          ],
          "properties": {
            "name": {
              "description": "A friendly name for logs.",
              "type": "string"
            },
            "realm": {
              "description": "Realm this augmenter applies to.",
              "type": "string"
            },
            "roles": {
              "description": "Map of role -> list of usernames that should receive it.",
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "type": {
              "type": "string",
              "enum": [
                "plain"
              ]
            }
          }
        },
        {
          "description": "Conditionally adds roles and attributes based on username or existing roles.",
          "type": "object",
          "required": [
            "augment",
            "match",
            "name",
            "realm",
            "type"
          ],
          "properties": {
            "augment": {
              "description": "Roles and attributes to inject when a match occurs.",
              "type": "object",
              "properties": {
                "attributes": {
                  "description": "Attributes to upsert onto the user.",
                  "type": "object",
                  "default": {},
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "roles": {
                  "description": "Roles to append (deduped).",
                  "type": "array",
                  "default": [],
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "match": {
              "description": "Matching rules that trigger augmentation.",
              "type": "object",
              "properties": {
                "role": {
                  "description": "Existing roles that should trigger augmentation.",
                  "type": "array",
                  "default": [],
                  "items": {
                    "type": "string"
                  }
                },
                "username": {
                  "description": "Usernames that should trigger augmentation.",
                  "type": "array",
                  "default": [],
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "name": {
              "description": "A friendly name for logs.",
              "type": "string"
            },
            "realm": {
              "description": "Realm this augmenter applies to.",
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "plain_advanced"
              ]
            }
          }
        }
      ]
    },
    "AuthConfig": {
      "description": "Configuration for the authentication timeout. This is used for select_ok operation in the auth module. We kill ongoing futures if they take too long.",
      "type": "object",
      "properties": {
        "timeout_in_ms": {
          "default": 5000,
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "JWTConfig": {
      "description": "A simple definition for JWT usage in tokens.",
      "type": "object",
      "required": [
        "exp",
        "iss",
        "secret"
      ],
      "properties": {
        "aud": {
          "type": [
            "string",
            "null"
          ]
        },
        "exp": {
          "type": "integer",
          "format": "int64"
        },
        "iss": {
          "type": "string"
        },
        "secret": {
          "type": "string"
        }
      }
    },
    "LoggingConfig": {
      "description": "LoggingConfig controls how we initialize tracing/logging.",
      "type": "object",
      "required": [
        "format",
        "level"
      ],
      "properties": {
        "format": {
          "type": "string"
        },
        "level": {
          "type": "string"
        }
      }
    },
    "PlainUserEntry": {
      "description": "Represents a single user entry (username + password).",
      "type": "object",
      "required": [
        "password",
        "username"
      ],
      "properties": {
        "password": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "ProviderConfig": {
      "description": "Configuration options for each authentication provider.",
      "oneOf": [
        {
          "description": "The config needed for the ECMWF API provider (who-am-i endpoint).",
          "type": "object",
          "required": [
            "name",
            "realm",
            "type",
            "uri"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "realm": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "ecmwf-api"
              ]
            },
            "uri": {
              "type": "string"
            }
          }
        },
        {
          "description": "JWT config structure for external usage",
          "type": "object",
          "required": [
            "cert_uri",
            "iam_realm",
            "name",
            "realm",
            "type"
          ],
          "properties": {
            "cert_uri": {
              "type": "string"
            },
            "iam_realm": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "realm": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "jwt"
              ]
            }
          }
        },
        {
          "description": "Config for an OpenID provider that also supports offline tokens.",
          "type": "object",
          "required": [
            "cert_uri",
            "iam_realm",
            "iam_url",
            "name",
            "private_client_id",
            "private_client_secret",
            "public_client_id",
            "type"
          ],
          "properties": {
            "cert_uri": {
              "type": "string"
            },
            "iam_realm": {
              "type": "string"
            },
            "iam_url": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "private_client_id": {
              "type": "string"
            },
            "private_client_secret": {
              "type": "string"
            },
            "public_client_id": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "openid-offline"
              ]
            }
          }
        },
        {
          "description": "PlainAuthConfig defines the data for Basic authentication.",
          "type": "object",
          "required": [
            "name",
            "realm",
            "type",
            "users"
          ],
          "properties": {
            "name": {
              "description": "A friendly name for logs.",
              "type": "string"
            },
            "realm": {
              "description": "The realm associated with this provider.",
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "plain"
              ]
            },
            "users": {
              "description": "A list of username/password pairs.",
              "type": "array",
              "items": {
                "$ref": "#/definitions/PlainUserEntry"
              }
            }
          }
        }
      ]
    },
    "ServiceConfig": {
      "description": "A declaration of services we might need (e.g., to store scopes).",
      "type": "object",
      "required": [
        "name",
        "scopes"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "StoreConfig": {
      "description": "A wrapper for the store configuration: - enabled: if false, the store is effectively disabled (NoStore). - backend: the actual store backend (MongoDB, etc.).",
      "type": "object",
      "oneOf": [
        {
          "description": "The config struct for MongoDB connections. Contains the URI and database name.",
          "type": "object",
          "required": [
            "database",
            "type",
            "uri"
          ],
          "properties": {
            "database": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "mongo"
              ]
            },
            "uri": {
              "type": "string"
            }
          }
        }
      ],
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    }
  }
}
